@using PropertySalesMVC.Helpers
@using Microsoft.AspNetCore.Http

@if (TempData["SuccessMessage"] != null)
{
    <div class="toast-container position-fixed top-0 end-0 p-4" style="z-index: 1200;">
        <div id="successToast"
             class="toast border-0 shadow-lg"
             role="alert"
             aria-live="assertive"
             aria-atomic="true"
             data-bs-delay="4000">

            <div class="toast-body d-flex align-items-center gap-2"
                 style="background: linear-gradient(135deg, #198754, #28a745); color: white; border-radius: 8px;">

                <i class="fa-solid fa-circle-check"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>

        </div>
    </div>
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ronak Estate</title>

    <!-- Bootstrap -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome (FOR SOCIAL & CONTACT ICONS) -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- Global Styles -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Page Specific Styles -->
    @RenderSection("Styles", required: false)

    <script src="~/js/adminlogin.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>

    <!-- ===============================
         HEADER / NAVBAR
    ================================ -->
    <header class="site-header">
        <nav class="navbar navbar-expand-lg container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/images/ronak-logo.png"
                     alt="Ronak Estate"
                     class="logo" />
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="mainNav">
                <ul class="navbar-nav align-items-center gap-3">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Admin/Login" class="btn-admin-login" 
                        data-bs-toggle="modal"
                           data-bs-target="#adminLoginModal">
                            Login
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- ===============================
         MAIN CONTENT (STICKY FOOTER)
    ================================ -->
    <main class="site-main">
        @RenderBody()
    </main>

    <!-- ===============================
         FOOTER
    ================================ -->
    @* <footer class="site-footer">
        <div class="container">
            <p class="mb-0">
                Ronak Estate<br />
                © 2026 PropertySales. All rights reserved.
            </p>
        </div>
    </footer> *@






    <footer class="site-footer">
        <div class="container">
            <div class="row text-center text-md-start">

                <div class="col-md-4 mb-4">
                    <h5 class="footer-title">@ViewBag.CompanyName</h5>
                    <p class="mb-1 fw-semibold">@ViewBag.OwnerName</p>
                    <p class="text-muted">@ViewBag.Designation</p>
                </div>

                <div class="col-md-4 mb-4">
                    <h6 class="footer-heading">@ViewBag.HeadOfficeTitle</h6>
                    <p class="footer-text">@ViewBag.HeadOfficeAddress</p>
                </div>

                <div class="col-md-4 mb-4">
                    <h6 class="footer-heading">@ViewBag.BranchOfficeTitle</h6>
                    <p class="footer-text">@ViewBag.BranchOfficeAddress</p>
                </div>
            </div>

            <hr>

            <div class="footer-bottom d-flex justify-content-between align-items-center flex-wrap">
                <span>
                    © @DateTime.Now.Year <strong>@ViewBag.CompanyName</strong>. All Rights Reserved.
                </span>

                <div class="social-icons">
                    @if (ViewBag.InstagramUrl != null)
                    {
                        <a href="@ViewBag.InstagramUrl" target="_blank">
                            <i class="fab fa-instagram"></i>
                        </a>
                    }

                    @if (ViewBag.FacebookUrl != null)
                    {
                        <a href="@ViewBag.FacebookUrl" target="_blank">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    }
                </div>
            </div>
        </div>
    </footer>


   





    <!-- Scripts -->

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var toastEl = document.getElementById('successToast');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl, { delay: 4000 });
                toast.show();
            }
        });
    </script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Scripts", required: false)
<div class="modal fade premium-admin-modal"
     id="adminLoginModal"
     tabindex="-1"
     aria-hidden="true">

    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- HEADER -->
            <div class="premium-header">
                <div>
                    <h4>Admin Access</h4>
                    <p>Authorized personnel only</p>
                </div>

                <button type="button"
                        class="premium-close"
                        data-bs-dismiss="modal"
                        aria-label="Close">×</button>
            </div>

            <!-- BODY -->
            <div class="premium-body">

                <div class="premium-field">
                    <label>Admin ID</label>
                    <input type="text"
                           id="AdminID"
                           class="premium-input"
                           placeholder="Enter Admin ID">
                </div>

                <div class="premium-field">
                    <label>Password</label>
                    <input type="password"
                           id="AdminPassword"
                           class="premium-input"
                           placeholder="Enter Password">
                </div>

                <div id="loginError" class="premium-error"></div>

            </div>

            <!-- FOOTER -->
            <div class="premium-footer">
                <button type="button"
                        class="btn-cancel"
                        data-bs-dismiss="modal">
                    Cancel
                </button>

                <button type="button"
                        class="btn-login"
                        onclick="submitAdminLogin()">
                    Login
                </button>
            </div>

        </div>
    </div>
</div>



</body>
</html>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const adminModal = document.getElementById("adminLoginModal");

        if (adminModal) {
            adminModal.addEventListener("hidden.bs.modal", function () {
                // Clear error message
                const errorDiv = document.getElementById("loginError");
                if (errorDiv) {
                    errorDiv.innerText = "";
                }

                // Optional: clear password field for security
                const passwordInput = document.getElementById("AdminPassword");
                if (passwordInput) {
                    passwordInput.value = "";
                }
            });
        }
    });
</script>




