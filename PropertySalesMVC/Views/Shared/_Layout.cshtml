<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ronak Estate</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/js/adminlogin.js"></script>
    <!-- Global Styles -->
    

    <!-- Page Specific Styles -->
    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- ===============================
         HEADER / NAVBAR
    ================================ -->
    <header class="site-header">
        <nav class="navbar navbar-expand-lg container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/images/ronak-logo.png"
                     alt="Ronak Estate"
                     class="logo" />
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="mainNav">
                <ul class="navbar-nav align-items-center gap-3">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#properties">Properties</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Admin/Login" class="btn-admin-login" 
                        data-bs-toggle="modal"
                           data-bs-target="#adminLoginModal">
                            Admin Login
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- ===============================
         MAIN CONTENT (STICKY FOOTER)
    ================================ -->
    <main class="site-main">
        @RenderBody()
    </main>

    <!-- ===============================
         FOOTER
    ================================ -->
    <footer class="site-footer">
        <div class="container">
            <p class="mb-0">
                Ronak Estate<br />
                © 2026 PropertySales. All rights reserved.
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Scripts", required: false)

    <div class="modal fade" id="adminLoginModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h5 class="modal-title fw-bold">Admin Login</h5>

                    <!-- Close (X) Button -->
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">
                    <form>

                        <!-- Admin ID -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Admin ID</label>
                            <input type="text"
                                   id="AdminID"
                                   class="form-control"
                                   placeholder="Enter Admin ID" />
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Password</label>
                            <input type="password"
                                   id="AdminPassword"
                                   class="form-control"
                                   placeholder="Enter Password" />
                        </div>

                    </form>

                    <div id="loginError" class="text-danger mt-2"></div>
                </div>




                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Close
                    </button>

                    <button type="button"
                            class="btn btn-primary" onclick="submitAdminLogin()">
                        Login
                    </button>
                </div>

            </div>
        </div>
    </div>
</body>
</html>
