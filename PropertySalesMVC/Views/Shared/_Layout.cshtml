<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Ronak Estate</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/adminlogin.js"></script>
    @RenderSection("Styles", required: false)
</head>

<body>

    <!-- HEADER / NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">

            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/images/ronak-logo.png"
                     alt="Ronak Estate Consultant"
                     class="brand-logo" />
            </a>


            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/AllProperties">Properties</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">Contact</a>
                    </li>

                    <li class="nav-item">
                        <a class="btn btn-primary ms-lg-3" 
                        data-bs-target="#adminLoginModal" 
                        data-bs-toggle="modal">
                            Admin Login
                        </a>
                    </li>

                </ul>
            </div>

        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="site-footer mt-5">
        <div class="container text-center">
            <p class="mb-1 fw-bold">Ronak Estate</p>
            <p class="mb-0">© 2026 PropertySales. All rights reserved.</p>
        </div>
    </footer>

    <!-- JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)


     @* Admin Login PopUp *@
    <div class="modal fade" id="adminLoginModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h5 class="modal-title fw-bold">Admin Login</h5>

                    <!-- Close (X) Button -->
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">
                    <form>

                        <!-- Admin ID -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Admin ID</label>
                            <input type="text"
                                   id="AdminID"
                                   class="form-control"
                                   placeholder="Enter Admin ID" />
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Password</label>
                            <input type="password"
                                   id="AdminPassword"
                                   class="form-control"
                                   placeholder="Enter Password" />
                        </div>

                    </form>

                    <div id="loginError" class="text-danger mt-2"></div>
                </div>




                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Close
                    </button>

                    <button type="button"
                            class="btn btn-primary" onclick="submitAdminLogin()">
                        Login
                    </button>
                </div>

            </div>
        </div>
    </div>
</body>

</html>
