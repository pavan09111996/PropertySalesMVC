<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ronak Estate</title>

    <!-- Bootstrap FIRST -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome (FOR SOCIAL & CONTACT ICONS) -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- Global Styles -->
    <link rel="stylesheet" href="~/css/site.css" />


    <!-- Page Specific Styles -->
    @RenderSection("Styles", required: false)

    <script src="~/js/adminlogin.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>

    <!-- ===============================
         HEADER / NAVBAR
    ================================ -->
    <header class="site-header">
        <nav class="navbar navbar-expand-lg container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/images/ronak-logo.png"
                     alt="Ronak Estate"
                     class="logo" />
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="mainNav">
                <ul class="navbar-nav align-items-center gap-3">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#properties">Properties</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Admin/Login" class="btn-admin-login" 
                        data-bs-toggle="modal"
                           data-bs-target="#adminLoginModal">
                            Admin Login
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- ===============================
         MAIN CONTENT (STICKY FOOTER)
    ================================ -->
    <main class="site-main">
        @RenderBody()
    </main>

    <!-- ===============================
         FOOTER
    ================================ -->
    @* <footer class="site-footer">
        <div class="container">
            <p class="mb-0">
                Ronak Estate<br />
                © 2026 PropertySales. All rights reserved.
            </p>
        </div>
