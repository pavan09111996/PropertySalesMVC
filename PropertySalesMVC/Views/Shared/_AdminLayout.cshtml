<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <!-- HEADER -->
    <nav class="navbar navbar-dark bg-dark px-3">
        <span class="navbar-brand mb-0 h5">Admin Dashboard</span>

        <a href="/Admin/Logout" class="btn btn-outline-light btn-sm">
            Logout
        </a>
    </nav>

    <!-- BODY -->
    <div class="container-fluid">
        <div class="row">

            <!-- SIDEBAR -->
            <div class="col-md-3 col-lg-2 bg-light min-vh-100 p-3">
                <h6 class="fw-bold mb-3">Menu</h6>

                <ul class="nav flex-column nav-pills">
                    <li class="nav-item mb-2">
                        <a class="nav-link"
                           href="/Admin/Dashboard">
                            Dashboard
                        </a>
                    </li>

                    <li class="nav-item mb-2">
                        <a class="nav-link"
                           href="/Admin/AddProperty">
                            Add New Property
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           href="/Admin/AllProperties">
                            All Properties
                        </a>
                    </li>
                </ul>
            </div>

            <!-- MAIN CONTENT -->
            <div class="col-md-9 col-lg-10 p-4">
                @RenderBody()
            </div>

        </div>
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-light text-center py-2">
        © 2026 PropertySales | Admin Panel
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
